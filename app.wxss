/**app.wxss**/
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}
/* 单行省略 */
.single-omit {
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  overflow: hidden;
}
/* 两行省略 */
.two-omit {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
/* 三行省略 */
.three-omit {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
/* 提交按钮 */
.submit-btn{
  margin: 100rpx 50rpx 0;
  text-align: center;
}
