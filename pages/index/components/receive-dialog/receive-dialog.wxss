.dialog-wrap {
  background-color: #ffffff;
  padding-bottom: 50rpx;
}

.dialog-wrap .bg-img {
  height: 400rpx;
  display: block;
  width: 100%;
}

.dialog-wrap .dialog-content {
  margin-top: -320rpx;
}

.dialog-wrap .dialog-content .slogan {
  text-align: center;
  font-size: 60rpx;
  letter-spacing: 0rpx;
  color: #fdfaf9;
  margin-bottom: 70rpx;
}

.dialog-wrap .dialog-content .inner-box {
  padding-bottom: 60rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  margin: 0 40rpx 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0rpx 4rpx 18rpx 0rpx rgba(165, 165, 165, 0.18);
  line-height: 44rpx;
  letter-spacing: 0rpx;
}

.dialog-wrap .dialog-content .inner-box .bell {
  width: 183rpx;
  height: 183rpx;
  margin: -50rpx 0 60rpx;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0rpx 9rpx 32rpx 0rpx rgba(30, 74, 255, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}

.dialog-wrap .dialog-content .inner-box .bell .bell-img {
  width: 127rpx;
  height: 127rpx;
}

.dialog-wrap .dialog-content .inner-box .title {
  font-size: 30rpx;
  color: #333333;
}

.dialog-wrap .dialog-content .inner-box .notice {
  font-size: 24rpx;
  color: #999999;
}

.dialog-wrap .dialog-content .btn {
  margin: 0 40rpx;
}
