.container .block {
  font-size: 30rpx;
  box-shadow: 0px 2px 16px 0px rgba(8, 1, 3, 0.07);
  border-radius: 10rpx;
}

.container .block:nth-child(n+2) {
  border-top: 1rpx solid #f4f4f4;
}

.container .block .flex {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.container .block .flex .right {
  text-align: right;
  color: #999;
}

.container .block .flex .money {
  color: #ff4b4b;
}

.container .block .content view {
  margin: 15rpx 0;
}

.container .bank {
  width: 100%;
}
