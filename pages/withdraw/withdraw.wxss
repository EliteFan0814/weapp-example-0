.tabs {
  margin-bottom: 15rpx;
}

.money {
  background: white;
  margin: 30rpx 0rpx 0rpx 0;
  padding: 30rpx 38rpx 20rpx;
}

.money_content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.money_content_title {
  color: #8d8d8d;
  margin-bottom: 30rpx;
}

.money_value {
  width: 100%;
  display: flex;
  align-items: flex-end;
  margin-bottom: 20rpx;
}

.money_value_number {
  color: #f97755;
  width: 100%;
}

.money_value_number > input {
  padding: 20rpx 0rpx;
  font-size: 40rpx;
  flex-grow: 1;
  border-bottom: solid 1rpx #d1d1d1;
}

.money_value_number .shouxu {
  font-size: 24rpx;
  margin-top: 5rpx;
  color: #999;
}

.money_label {
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.money_label > text:nth-child(2) {
  color: #f97755;
}

.table {
  background: white;
}

.table .tab {
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  border-bottom: #f5f5f5 1rpx solid;
  color: #333;
}

.table .tab > input {
  flex: 1;
  text-align: right;
}

.table .tab > view {
  width: 50%;
}

.button {
  position: absolute;
  background-color: #0ccd79;
  color: white;
  width: 480rpx;
  height: 78rpx;
  line-height: 78rpx;
  bottom: 40rpx;
  left: calc((100% - 480rpx) / 2);
  font-size: 30rpx;
  text-align: center;
  border-radius: 50rpx;
}

.van-dropdown-menu {
  height: auto !important;
}

.submit {
  margin: 100rpx 50rpx 0;
  text-align: center;
}
