.container {
  background-color: #fff;
}

.container .logo-wrap {
  text-align: center;
  margin-bottom: 30rpx;
}

.container .logo-wrap .logo {
  width: 300rpx;
}

.container .first-form {
  padding-top: 20rpx;
}

.container .first-form .change-psd {
  display: flex;
  flex-direction: column;
}

.container .first-form .change-psd .account {
  display: flex;
  align-items: center;
  margin: 20rpx auto;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  width: 85%;
}

.container .first-form .change-psd .account image {
  width: 45rpx;
  margin-right: 30rpx;
}

.container .first-form .change-psd .account .verify-input {
  width: 410rpx;
}

.container .first-form .change-psd .verify {
  justify-content: space-between;
}

.container .first-form .change-psd .verify .verify-left {
  display: flex;
}

.container .first-form .change-psd .verify .verify-right .verify-btn {
  padding: 10rpx 15rpx;
  border-radius: 30rpx;
  color: #F87574;
  text-align: center;
  width: 120rpx;
  border: 1px solid #F87574;
  font-size: 24rpx;
}

.container .change-btn {
  padding: 100rpx 150rpx;
}
