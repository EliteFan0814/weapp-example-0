.container {
  background-color: #fff;
}

.container .login {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.container .login .logo {
  width: 300rpx;
}

.container .form {
  padding-top: 20rpx;
}

.container .form .account {
  display: flex;
  align-items: center;
  margin: 20rpx auto;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  width: 85%;
  font-size: 28rpx;
}

.container .form .account image {
  width: 45rpx;
  margin-right: 30rpx;
}

.container .login-btn {
  margin: 100rpx auto;
  width: 70%;
}

.container .login-btn .second-operate {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.container .login-btn .regist {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #333;
}
