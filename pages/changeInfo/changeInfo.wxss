/* pages/changeInfo/changeInfo.wxss */
.wrap {
  padding: 0 20rpx;
}

.wrap .thumb-wrap {
  position: relative;
  height: 350rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wrap .thumb-wrap .bg {
  position: absolute;
  width: 100%;
  height: 350rpx;
}

.wrap .field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.wrap .field .text {
  font-size: 28rpx;
  color: #666;
}

.wrap .field .right {
  flex: 2;
  display: flex;
  justify-content: flex-end;
}

.wrap .field .right .text {
  font-size: 28rpx;
  color: #999;
}

.wrap .field .input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
}

.wrap .field .icon {
  color: #ccc;
}

.wrap .up-pic {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.wrap .submit {
  margin: 100rpx 50rpx 0;
  text-align: center;
}

.wrap .input-name {
  margin: 50rpx;
  border-bottom: 1px solid #f1f1f1;
  font-size: 28rpx;
  padding: 10rpx 0;
}
